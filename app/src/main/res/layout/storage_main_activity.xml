<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/file_output_bt"
        android:text="文件存储"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/shared_preferences_bt"
        android:text="键值对存储"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/database_bt"
        android:text="数据库"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/database_lite_pal_bt"
        android:textAllCaps="false"
        android:text="数据库LitePal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
